[add]
	ignoreErrors = true

[apply]
	whitespace = nowarn

[branch]
	sort = refname

[clean]
	requireForce = false

[completion]
	commands = checkout,reset

[color]
	ui = always

[color "status"]
	added = green
	changed = red
	untracked = yellow

[core]
	autocrlf = false
	commentChar = $
	whitespace = space-before-tab,indent-with-non-tab,-tab-in-indent,trailing-space,-cr-at-eol,tabwidth=4

[diff]
	algorithm = minimal
	renames = true
	tool = p4merge
[difftool]
	prompt = false

[grep]
	fullName = true
	lineNumber = true
	threads = 7

[log]
	abbrevCommit = true
	showRoot = true

[merge]
	conflictStyle = diff3
	tool = p4merge
[mergetool]
	keepBackup = false
	keepTemporaries = false
	prompt = false
	writeToTemp = true

[pull]
	rebase = true

[rebase]
	autoStash = true
[init]
	defaultBranch = main
